<section id="contact" class="min-h-screen py-24 bg-bg-alt">
  <div class="max-w-[800px] mx-auto px-8 text-center">
    <h2 class="text-primary [text-shadow:2px_2px_0_#00f5ff] mb-4" data-i18n="contact.title">LET'S WORK TOGETHER</h2>
    <div class="accent-line mx-auto mb-8"></div>
    <p class="text-text-muted text-lg mb-12" data-i18n="contact.intro">
      Got a project in mind? Want to collaborate? Drop me a message and let's create something amazing.
    </p>
    <form id="contact-form" class="grid gap-6 mb-8">
      <input type="text" name="name" class="form-input" data-i18n-placeholder="contact.name" placeholder="YOUR NAME" required>
      <input type="email" name="email" class="form-input" data-i18n-placeholder="contact.email" placeholder="YOUR EMAIL" required>
      <textarea name="message" rows="6" class="form-input" data-i18n-placeholder="contact.message" placeholder="YOUR MESSAGE" required></textarea>
      <button type="submit" class="btn justify-self-center" data-i18n="contact.send">SEND MESSAGE</button>
    </form>
    <p class="font-display text-lg tracking-wider min-h-[1.5rem]" id="form-status"></p>
    <div class="flex justify-center gap-8 mt-16 flex-wrap">
      <a href="mailto:lokoslevi06@gmail.com" class="font-display text-lg tracking-widest text-accent no-underline hover:drop-shadow-[0_0_10px_#00f5ff] transition-all">EMAIL</a>
      <a href="https://www.instagram.com/lokoslevente/" class="font-display text-lg tracking-widest text-accent no-underline hover:drop-shadow-[0_0_10px_#00f5ff] transition-all">INSTAGRAM</a>
      <a href="https://github.com/LksLvnt" class="font-display text-lg tracking-widest text-accent no-underline hover:drop-shadow-[0_0_10px_#00f5ff] transition-all">GITHUB</a>
    </div>
  </div>
</section>